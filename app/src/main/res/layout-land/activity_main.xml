<?xml version="1.0" encoding="utf-8"?>
<!--"com.example.assignment7audiobookplayer.BookDetailsFragment"-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container1"
        android:layout_width="365dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/container3"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container3"
        app:layout_constraintWidth_percent="0.4" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container2"
        android:name="com.example.assignment7audiobookplayer.BookDetailsFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/container3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container3"
        android:name="com.example.assignment7audiobookplayer.ControlFragment"
        android:layout_width="365dp"
        android:layout_height="70dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toTopOf="@+id/container1"
        app:layout_constraintEnd_toStartOf="@+id/container2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Search" />

    <Button
        android:id="@+id/button_Search"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Click to search!"
        app:icon="@android:drawable/ic_menu_search"
        app:iconGravity="textStart"
        app:iconSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/container3"
        app:layout_constraintEnd_toStartOf="@+id/container2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>