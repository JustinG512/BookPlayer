<?xml version="1.0" encoding="utf-8"?>
<!--"com.example.assignment7audiobookplayer.BookDetailsFragment"-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Search"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.4" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container2"
        android:name="com.example.assignment7audiobookplayer.BookDetailsFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/container1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_Search"
        android:layout_width="224dp"
        android:layout_height="52dp"
        android:layout_marginEnd="34dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Click to search!"
        app:icon="@android:drawable/ic_menu_search"
        app:iconGravity="textStart"
        app:iconSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/container2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>